generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  DEFAULT
  CADASTRE
  REPORT
}

enum UnitType {
  KG
  G
  L
  UN
}

enum BaseUnitType {
  KG
  UN
  L
}

enum ProductType {
  DONATED
  PURCHASED
}

enum AlertType {
  EXPIRED
  EXPIRING
  OUT_STOCK
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
}

model User {
  id String @id @default(cuid())

  name          String?   @db.VarChar(50)
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserType  @default(DEFAULT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  AuditLog AuditLog[]

  @@index([id, email])
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@index([token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@index([token])
}

model AlertSystem {
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  id String @id @default(cuid())

  productId Int
  type      AlertType
  isRead    Boolean   @default(false)

  createdAt DateTime @default(now()) @db.Date

  @@index([type, isRead])
}

model AuditLog {
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  id String @id @default(cuid())

  userId          String?
  recordChangedId String?
  actionType      String  @db.VarChar(30)
  entity          String  @db.VarChar(30)
  changedValue    String? @db.VarChar(150)
  ipAddress       String? @db.VarChar(45)
  targetEmail     String? @db.VarChar(255)
  details         String  @db.Text

  createdAt DateTime @default(now())
}

model MasterProduct {
  category Category  @relation(fields: [categoryId], references: [id], onDelete: NoAction)
  group    Group     @relation(fields: [groupId], references: [id], onDelete: NoAction)
  subgroup Subgroup? @relation(fields: [subgroupId], references: [id], onDelete: NoAction)

  id Int @id @default(autoincrement())

  name       String       @db.VarChar(150)
  baseUnit   BaseUnitType
  categoryId String
  groupId    String
  subgroupId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Product Product[]

  @@index([name, baseUnit])
}

model Product {
  masterProduct MasterProduct @relation(fields: [masterProductId], references: [id], onDelete: NoAction)
  receiver      Receiver      @relation(fields: [receiverId], references: [id], onDelete: NoAction)
  supplier      Supplier?     @relation(fields: [supplierId], references: [id], onDelete: NoAction)

  id Int @id @default(autoincrement())

  masterProductId  Int
  name             String      @db.VarChar(150)
  quantity         Float       @db.Real
  unit             UnitType
  unitWeight       Float?      @db.Real
  unitOfUnitWeight UnitType?
  lot              String      @db.VarChar(50)
  validityDate     DateTime    @db.Date
  receiptDate      DateTime    @db.Date
  receiverId       String
  supplierId       String?
  productType      ProductType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  AlertSystem  AlertSystem[]
  StockMovement StockMovement[]

  @@index([validityDate])
}

model StockMovement {
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  id String @id @default(cuid())

  productId        Int
  quantity         Float    @db.Real
  unit             UnitType
  movementType     String   @db.VarChar(30)
  movementCategory String   @db.VarChar(30)
  details          String   @db.Text

  createdAt DateTime @default(now())

  @@index([productId, movementType])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique @db.VarChar(50)
  createdAt DateTime @default(now())

  MasterProduct MasterProduct[]
}

model Group {
  id        String   @id @default(cuid())
  name      String   @unique @db.VarChar(50)
  createdAt DateTime @default(now())

  MasterProduct MasterProduct[]
}

model Subgroup {
  id        String   @id @default(cuid())
  name      String   @unique @db.VarChar(50)
  createdAt DateTime @default(now())

  MasterProduct MasterProduct[]
}

model Receiver {
  id        String   @id @default(cuid())
  name      String   @unique @db.VarChar(150)
  createdAt DateTime @default(now())

  Product Product[]
}

model Supplier {
  id        String   @id @default(cuid())
  name      String   @unique @db.VarChar(150)
  createdAt DateTime @default(now())

  Product Product[]
}
